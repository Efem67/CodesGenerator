<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_scanner">

    <fragment
        android:id="@+id/nav_qrCodeGen"
        android:name="com.example.qrcodev2.ui.home.HomeFragment"
        android:label="QrCode Generator"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_barCodeGen"
        android:name="com.example.qrcodev2.ui.gallery.GalleryFragment"
        android:label="BarCode Generator"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_scanner"
        android:name="com.example.qrcodev2.ui.slideshow.SlideshowFragment"
        android:label="Scanner"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.qrcodev2.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>